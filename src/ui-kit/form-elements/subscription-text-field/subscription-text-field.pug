mixin subscription-text-field(caption, placeholder, subLink)
  .subscription-text-field
    if caption
      label.subscription-text-field__caption= caption
    .input-with-link
      a.subscription-text-field__btn.glyphicon_next(href= subLink)
      input.subscription-text-field__input(type="text" name="data" placeholder= placeholder autocomplete="off")