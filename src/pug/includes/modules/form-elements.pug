    label(title="bad" for="star-0")

mixin buttons(btn_class, btn_href, caption)
  a(class= btn_class href= btn_href)= caption

mixin pagination(pages)
  .pagination-body
    .pagination-btn
      - for (let i = 0; i < pages.length; i++){
          - if (i == 0){
              a.start-page.active-page(id=`page-${pages[i].number}` href= pages[i].href)= pages[i].number
          - } else if (i == pages.length - 1 ){
              a.final-page(id=`page-${pages[i].number}` href= pages[i].href)= pages[i].number
          - } else {
              a(id=`page-${pages[i].number}` href= pages[i].href)= pages[i].number
          - }
      - }
      a.next-page
    .pagination-variants-count
      p= `1-12 из 100+ вариантов аренды`

mixin range-slider()
  .range-slider
    .range-slider-title
      h3.form-element-caption Range slider
      span.amount-interval
    input.js-range-slider(type="text" name="my_range" value="")


mixin bullet-list(caption, bulletList)
  .bullet-list
    h3.form-element-caption= caption
    ul
      - for(i = 0; i < bulletList.length; i++){
          li.bullet-list-element= bulletList[i].title
      - }

mixin comment(commentInf)
  .comment
    .comment-title
      img.comment-title-avatar(src= commentInf.src, alt="avatar")
      h3.comment-title-author= commentInf.author
        span.comment-title-date #{commentInf.date} назад 
    .comment-body
      +like-button(commentInf.likeCount)(id="comment-like", class="liked")
      p.comment-body-text= commentInf.text

